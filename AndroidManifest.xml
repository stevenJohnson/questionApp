<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.drake.questionapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:name="utilities.ThisApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.drake.questionapp.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="edu.drake.questionapp.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.drake.questionapp.CategoryActivity"
            android:label="@string/title_activity_category" >
        </activity>
        <activity
            android:name="edu.drake.questionapp.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="edu.drake.questionapp.QuestionActivity"
            android:label="@string/title_activity_question" >
        </activity>
        <activity
            android:name="edu.drake.questionapp.EditProfile"
            android:label="@string/title_activity_edit_profile" >
        </activity>
        <activity
            android:name="edu.drake.questionapp.ChangeEmail"
            android:label="@string/title_activity_change_email" >
        </activity>
        <activity
            android:name="edu.drake.questionapp.ChangeProfile"
            android:label="@string/title_activity_change_profile" >
        </activity>
        <activity
            android:name="edu.drake.questionapp.UserProfile"
            android:label="@string/title_activity_user_profile" >
        </activity>
        <activity
            android:name="edu.drake.questionapp.Search"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="edu.drake.questionapp.AnswerActivity"
            android:label="@string/title_activity_answer" >
        </activity>
        <activity
            android:name="edu.drake.questionapp.NewQuestion"
            android:label="@string/title_activity_new_question" >
        </activity>
    </application>

</manifest>